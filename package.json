{
  "name": "mist-drive",
  "version": "0.0.1",
  "description": "City of Vernonia ArcGIS JavaScript template application.",
  "author": {
    "name": "COV-GIS",
    "url": "https://www.vernonia-or.gov/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/COV-GIS/mist-drive.git"
  },
  "license": "MIT",
  "dependencies": {
    "@arcgis/core": "^4.18.1",
    "@babel/polyfill": "^7.12.1",
    "cov-arcgis-esm": "^0.0.7"
  },
  "devDependencies": {
    "@arcgis/webpack-plugin": "^4.18.0",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.12",
    "@babel/preset-typescript": "^7.12.7",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "file-loader": "^6.2.0",
    "fse": "^4.0.1",
    "html-inline-css-webpack-plugin": "^1.10.0",
    "html-webpack-plugin": "^5.0.0-alpha.7",
    "jest": "^26.6.3",
    "mini-css-extract-plugin": "^1.3.5",
    "node-sass": "^5.0.0",
    "prettier": "^2.2.1",
    "ramda": "^0.27.1",
    "resolve-url-loader": "^3.1.2",
    "sass-loader": "^10.1.1",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.14",
    "tslib": "^2.1.0",
    "typescript": "^4.1.3",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.5.0",
    "webpack-dev-server": "^3.11.2",
    "workbox-webpack-plugin": "^6.1.0",
    "yargs": "^16.2.0"
  },
  "scripts": {
    "build": "webpack --mode production",
    "start": "webpack serve --mode development",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "prettier-webpack": "prettier --write webpack.config.js",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "test": "jest --coverage --passWithNoTests",
    "precommit": "lint-staged",
    "widget": "node template/index.js"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-typescript"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "ignorePatterns": [
      "webpack.config.js",
      "*.d.ts",
      "template/widget/",
      "dist/"
    ],
    "rules": {
      "@typescript-eslint/no-empty-function": 0,
      "@typescript-eslint/ban-ts-comment": 1,
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_|^h"
        }
      ]
    },
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "tabWidth": 2
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  }
}
